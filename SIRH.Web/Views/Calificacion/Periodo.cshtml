@model SIRH.Web.ViewModels.FormularioCalificacionVM
@{
    ViewBag.Title = "Periodo";
    Layout = "~/Views/Shared/Calificacion.cshtml";
}

<link href="~/Content/datetimepicker.css" rel="stylesheet" />

<div id="formularioC" class="jumbotron">
    <center>
        <h4 class="display-4">EVALUACIÓN DEL DESEMPEÑO</h4>
        <h4 class="display-5">MINISTERIO DE OBRAS PÚBLICAS Y TRANSPORTES</h4>
        <br />
        <div class="card">
            <div class="card-header text-left">
                <strong>Parámetros del Periodo de Evaluación</strong>
            </div>
            @using (Ajax.BeginForm("Periodo", "Calificacion", new AjaxOptions { UpdateTargetId = "detalle", HttpMethod = "POST" }))
            {
                <div class="card-body">

                    <div class="form-group row">
                        <label for="ced" class="col-sm-3 col-form-label"><b>Periodo a Evaluar:</b></label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.PeriodoCalificacion.IdEntidad, new { @id = "idPeriodo", @class = "form-control", @readonly = "readonly", @placeholder = "Periodo" })
                            @Html.HiddenFor(model => model.PeriodoCalificacion.IdEntidad)
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-3">
                            <b>@Html.LabelFor(model => model.PeriodoCalificacion.FecRige)</b>
                            <span>:</span>
                            @Html.TextBoxFor(model => model.PeriodoCalificacion.FecRige, new { @id = "FecRige", @class = "form-control", @readonly = "readonly", @placeholder = "Fecha Rige"})
                            @Html.HiddenFor(model => model.PeriodoCalificacion.FecRige)
                            @Html.ValidationMessageFor(model => model.PeriodoCalificacion.FecRige)
                        </div>
                        <div class="form-group col-3">
                            <b>@Html.LabelFor(model => model.PeriodoCalificacion.FecVence)</b>
                            <span>:</span>
                            @Html.TextBoxFor(model => model.PeriodoCalificacion.FecVence, new { @id = "FecVence", @class = "form-control", @readonly = "readonly", @placeholder = "Fecha Vence" })
                            @Html.HiddenFor(model => model.PeriodoCalificacion.FecVence)
                            @Html.ValidationMessageFor(model => model.PeriodoCalificacion.FecVence)
                        </div>
                        <div class="form-group col-3">
                            <b>@Html.LabelFor(model => model.PeriodoCalificacion.FecRigeReglaTecnica)</b>
                            <span>:</span>
                            @Html.TextBoxFor(model => model.PeriodoCalificacion.FecRigeReglaTecnica, new { @id = "FecRigeReglaTec", @class = "form-control", @readonly = "readonly", @placeholder = "Fecha Rige" })
                            @Html.HiddenFor(model => model.PeriodoCalificacion.FecRigeReglaTecnica)
                            @Html.ValidationMessageFor(model => model.PeriodoCalificacion.FecRigeReglaTecnica)
                        </div>
                        <div class="form-group col-3">
                            <b>@Html.LabelFor(model => model.PeriodoCalificacion.FecVenceReglaTecnica)</b>
                            <span>:</span>
                            @Html.TextBoxFor(model => model.PeriodoCalificacion.FecVenceReglaTecnica, new { @id = "FecVenceReglaTec", @class = "form-control", @readonly = "readonly", @placeholder = "Fecha Vence"})
                            @Html.HiddenFor(model => model.PeriodoCalificacion.FecVenceReglaTecnica)
                            @Html.ValidationMessageFor(model => model.PeriodoCalificacion.FecVenceReglaTecnica)
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-3">
                            <input id="btnGuardarPeriodo" class="btn btn-secondary" name="SubmitButton" type="submit" value="Guardar Periodo" />
                        </div>
                    @*</div>
                    <div class="row">*@
                        <div class="form-group col-3">
                            <input id="btnListarFuncionarios" class="btn btn-secondary" name="SubmitButton" type="submit" value="Generar Listado Funcionarios" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-3">
                            <div id="progressbarGuardar" class="loader" hidden></div>
                        </div>
                    </div>
                    <br />
                </div>
            }
        </div>
    </center>
</div>

<div id="detalle"></div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FuncionesCalificacion.js"></script>

<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>