@{
    ViewBag.Title = "Historial";
    Layout = "~/Views/Shared/Calificacion.cshtml";
}


<div class="jumbotron">
    <center>
        <h3 class="display-4">Buscar Historial Calificaciones</h3>
        <br />
        <div class="card">
            <div class="card-header text-left">
                <strong>Parámetros de búsqueda</strong>
            </div>
            @using (Ajax.BeginForm("Historial", "Calificacion", new AjaxOptions { UpdateTargetId = "historial", HttpMethod = "POST" }))
            {
                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Cédula de Funcionario: </label>
                        <div class="col-sm-3">
                            <input type="text" name="ced" class="form-control" value="" id="ced" oninput="check_text(this);" placeholder="Cédula" pattern="[0-9]{10}" />
                        </div>
                    </div>

                    <button id="Cargar" type="submit" class="btn btn-primary float-right" name="Cargar" value="Cargar">Buscar</button>

                    <div id="preloader" name="preloader" class="loader" hidden></div>
                    <span id="error" style="color: Red"></span>
                    <br />

                </div>

            }
        </div>
    </center>
</div>

<div id="historial" class="container">
    @{

        //Html.RenderPartial("_Historial", Model);
    }
</div>


<div class="modal fade" id="agregar-historico" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Agregar Calificación Histórica</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @{Html.RenderPartial("~/Views/Calificacion/CalificarHistorico.cshtml"); }
            </div>
            <div class="modal-footer">
                <button id="CacelarCalculoPopUp" type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                @*<button id="CalcularPopUp" type="button" class="btn btn-primary">Calcular</button>*@

            </div>
        </div>
    </div>
</div>


<br />

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FuncionesCalificacion.js"></script>