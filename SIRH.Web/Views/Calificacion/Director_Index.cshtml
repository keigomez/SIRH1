@model SIRH.Web.Models.FuncionarioModel
@{
    using (Ajax.BeginForm("Director_Index", "Calificacion", new AjaxOptions { UpdateTargetId = "target-jefe", HttpMethod = "POST", OnSuccess = "successDataDepartamento", OnBegin = "beginDataDepartamento" }))
    {
        <div class="card">
            <div class="card-header">
                Parámetros de búsqueda:
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-10">
                        @Html.Label("Cédula")
                        <span>:</span>
                        @Html.TextBox("cedula", String.Empty, new { @onkeypress = "return IsNumeric(event,'departamento', 'código de departamento')", @class = "form-control" })
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-10">
                        @Html.Label("Nombre")
                        <span>:</span>
                        @Html.TextBox("nombre", String.Empty, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-10">
                        @Html.Label("Apellido 1")
                        <span>:</span>
                        @Html.TextBox("apellido1", String.Empty, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-10">
                        @Html.Label("Apellido 2")
                        <span>:</span>
                        @Html.TextBox("apellido2", String.Empty, new { @class = "form-control" })
                    </div>
                </div>


                <div class="row">
                    <div class="form-group col-10">
                        @Html.Label("Digite el correo eléctrónico para asignar")
                        <span>:</span>
                        @Html.TextBox("correo", String.Empty, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-8">
                        <input class="btn btn-secondary" type="submit" value="Buscar" id="btnBuscaJefe" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-5">
                        <div id="progressbarjefe" class="loader" hidden></div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div id="error-jefe" class="alert alert-danger" role="alert" hidden></div>
    <div id="target-jefe"></div>

    @*<script src="~/Scripts/Pages/FuncionesCalificacion.js" type="text/javascript"></script>*@

    <script src="~/Scripts/puesto-control.js" type="text/javascript"></script>

    <script type="text/javascript" src="~/Scripts/funciones-dialogos.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
}