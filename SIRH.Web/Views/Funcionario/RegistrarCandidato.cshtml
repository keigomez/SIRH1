@model SIRH.Web.ViewModels.PerfilBasicoFuncionarioVM
@{
    ViewBag.Title = "Registrar Candidato";
    Layout = "~/Views/Shared/Vacantes.cshtml";
}

@{
    using (Ajax.BeginForm("RegistrarCandidato", "Funcionario", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnSuccess = "SuccessCargarFuncionario",
        OnComplete = "CompleteCargarFuncionario",
        OnBegin = "BeginCargarFuncionario"
    }))
    {
        <div class="jumbotron">
            <center><h3 class="display-4">Registrar Funcionario / Oferente</h3></center>
            <br />
            <div class="card">
                <div class="card-header text-center">
                    Digite el número de cédula de la persona
                </div>
                <div class="card-body">
                    <center>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Funcionario.Cedula, new { @class = "form-control", @placeholder = "Cédula", style = "width: 280px;" })
                            @Html.ValidationMessageFor(model => model.Funcionario.Cedula)
                        </div>
                        <input id="btnBuscar" name="SubmitButton" type="submit" value="Buscar" class="btn btn-secondary" />
                        <div id="preloader" class="loader" hidden></div>
                    </center>
                </div>
            </div>
        </div>
    }
    <div id="dvResultadoBusqueda">
        @*@{ Html.RenderPartial("_FormularioCandidato", Model);}*@
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioPerfilFuncionario.js" type="text/javascript"></script>