@model SIRH.Web.ViewModels.DetallePuestoVM

@{
    ViewBag.Title = "Gestión de puestos sujetos a caución";
    Layout = "~/Views/Shared/Cauciones.cshtml";
}

@*<link rel="stylesheet" href="~/Content/datetimepicker.css">*@


@using (Ajax.BeginForm("SetPuestoCaucion", "Caucion", new AjaxOptions
{
    HttpMethod = "Post",
    UpdateTargetId = "dvResultadoBusqueda",
    InsertionMode = InsertionMode.Replace,
    OnSuccess = "SuccessCargarFuncionario",
    OnComplete = "CompleteCargarFuncionario",
    OnBegin = "BeginCargarFuncionario"
}))
{
    <div class="jumbotron">
        <center>
            <h3 class="display-4">Gestión de puestos sujetos a caución</h3>
            <br />
            <div class="card">
                <div class="card-header text-left">
                    Digite el número de puesto a consultar
                </div>

                <div class="card-body">

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Puesto.CodPuesto, new { @class = "form-control", @placeholder = "# de Puesto", style = "width: 280px;" })
                        @Html.ValidationMessageFor(model => model.Puesto.CodPuesto)
                    </div>
                    <input id="btnBuscar" name="SubmitButton" class="btn btn-primary" type="submit" value="Buscar" />
                    <div id="preloader" class="loader" style="display: none"></div>

                </div>
            </div>

        </center>
    </div>
}

<div id="dvResultadoBusqueda"></div>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioCaucion.js" type="text/javascript"></script>
