@model SIRH.Web.Models.PresupuestoModel

@{
    using (Ajax.BeginForm("Presupuesto_Index", "UbicacionPuesto", new { reset = true }, new AjaxOptions { UpdateTargetId = "target-presupuesto", HttpMethod = "POST", OnSuccess = "successDataPresupuesto", OnBegin = "beginDataPresupuesto" }))
    {
        <div class="card">
            <div class="card-header">
                Parámetros de búsqueda:
            </div>
            <div class="card-body">
                <div class="row">

                    <div class="form-group col-10">
                        <label for="CodigoSeleccionado">Código Presupuestario</label>
                        @Html.DropDownListFor(model => model.CodigoPresupuesto,
                            Model.CodigosPresupuestarios as SelectList,
                            null, new { @id = "CodigoSeleccionado", @class = "form-control" })
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-8">
                        <input class="btn btn-secondary" type="submit" value="Buscar" id="btnBuscaPresupuesto" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-5">
                        <div id="progressbarpresupuesto" class="loader" hidden></div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div id="error-presupuesto" class="alert alert-danger" role="alert" hidden></div>
    <br />
    <div id="target-presupuesto"></div>

}
