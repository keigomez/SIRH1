@model SIRH.Web.ViewModels.BusquedaGastoTransporteVM
@{
    ViewBag.Title = "SearchGastoTransporte";
    Layout = "~/Views/Shared/GastoTransporte.cshtml";
}

<link href="~/Content/datetimepicker.css" rel="stylesheet" />


<center><h2>Busqueda de Gasto de Transporte</h2></center>

@{
    using (Ajax.BeginForm("SearchGastoTransporte", "ViaticoCorrido", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnComplete = "CompleteSearch",
        OnBegin = "BeginSearch"
    }))
    {
        <div class="card">
            <div class="card-header">
                Filtros de busqueda
            </div>
            <div class="card-body">

                <div class="row" style="margin-bottom:25px;">
                    <!-- Cedula Funcionario -->

                    <div class="form-group col-4">
                        @Html.LabelFor(model => model.Funcionario.Cedula)
                        <span>
                            :
                        </span>
                        @Html.TextBoxFor(model => model.Funcionario.Cedula, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Funcionario.Cedula)
                    </div>
                    <!-- Codigo Desarraigo -->
                    @*<div class="form-group col-5">
                            @Html.LabelFor(model => model.Desarraigo.CodigoDesarraigo)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Desarraigo.CodigoDesarraigo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Desarraigo.CodigoDesarraigo)
                        </div>*@
                </div>
                <div class="row" style="margin-bottom:25px;">
                    <!-- Estado del Viático Corrido -->
                    <div class="form-group col-5">
                        <label> Tipo de historial</label>
                        <span>:</span>
                        <div class="form-group">
                            <select class="btn btn-secondary dropdown-toggle" name="Fformulario" required id="Fformulario">
                                <option value="0"></option>
                                <option value="1">PI-555   Asignación</option>
                                <option value="2">PI-1105  Deducción</option>
                                <option value="3">PI-1106  Eliminación</option>
                            </select>
                        </div>
                    </div>



                </div>
                <div id="btnBuscar" class="row" style="margin-bottom:25px;">
                    <div class="col-8"></div>
                    <div class="form-group col-2">
                        <input type="button" class="btn btn-info" value="Limpiar" onclick="CleanSearch()" />

                    </div>
                    <div class="form-group col-2">
                        <input type="submit" class="btn btn-info" value="Buscar" />

                    </div>

                </div>
                <div class="row">
                    <div class="col-5"></div>
                    <div id="preloader" class="loader" hidden></div>
                </div>
            </div>
        </div>

    }
    <div id="dvResultadoBusqueda"></div>
}



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/SearchGastoTransporte.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>


