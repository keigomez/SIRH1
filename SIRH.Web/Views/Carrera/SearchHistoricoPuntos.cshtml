@model SIRH.Web.ViewModels.BusquedaHistoricoPuntosVM

@{
    ViewBag.Title = "SearchHistoricoPuntos";
    Layout = "~/Views/Shared/Carrera.cshtml";
}

<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

@using (Ajax.BeginForm("SearchHistoricoPuntos", "Carrera", new AjaxOptions
{
    UpdateTargetId = "dvResultadoBusqueda",
    HttpMethod = "POST",
    OnComplete = "CompleteSearch",
    OnBegin = "BeginSearch"
}))
{
    <div class="jumbotron">
        <center>
            <h3 class="display-4">Buscar datos históricos de puntos</h3>
            <br />
            <div class="card">
                <div class="card-header text-left">
                    <strong>Parámetros de búsqueda</strong>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Puntos.Cedula, new { @for = "Cedula", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Puntos.Cedula, new { @id = "Cedula", @class = "form-control", @maxlength = "10" })
                        </div>

                        @Html.LabelFor(model => model.Puntos.Nombre, new { @for = "Nombre", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Puntos.Nombre, new { @id = "Nombre", @class = "form-control" })
                        </div>
                    </div>



                    <input id="btnBuscar" name="SubmitButton" type="submit" value="Buscar" class="btn btn-primary float-right" />
                    <div id="preloader" class="loader float-right" style="display: none"></div>

                </div>
            </div>

        </center>
    </div>
    <br />
}

<div id="dvResultadoBusqueda"></div>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/SearchHistoricoPuntos.js" type="text/javascript"></script>



