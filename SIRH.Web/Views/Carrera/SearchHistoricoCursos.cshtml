@model SIRH.Web.ViewModels.BusquedaHistoricoCursosVM

@{
    ViewBag.Title = "SearchHistoricoCursos";
    Layout = "~/Views/Shared/Carrera.cshtml";
}

<link rel="stylesheet" href="~/Content/datetimepicker.css">
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>

@using (Ajax.BeginForm("SearchHistoricoCursos", "Carrera", new AjaxOptions
{
    UpdateTargetId = "dvResultadoBusqueda",
    HttpMethod = "POST",
    OnComplete = "CompleteSearch",
    OnBegin = "BeginSearch"
}))
{
    <div class="jumbotron">
        <center>
            <h3 class="display-4">Buscar datos históricos de cursos</h3>
            <br />
            <div class="card">
                <div class="card-header text-left">
                    <strong>Parámetros de búsqueda</strong>
                </div>

                <div class="card-body">

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Curso.Cedula, new { @for = "Cedula", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Curso.Cedula, new { @id = "Cedula", @class = "form-control", @maxlength = "10" })
                        </div>

                        @Html.LabelFor(model => model.Curso.Nombre, new { @for = "Nombre", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Curso.Nombre, new { @id = "Nombre", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.FechaDesde, new { @for = "FechaDesde", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.FechaDesde, new { @id = "FechaDesde", @class = "form-control", @readonly = "readonly" })
                        </div>

                        @Html.LabelFor(model => model.FechaHasta, new { @for = "FechaHasta", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.FechaHasta, new { @id = "FechaHasta", @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Curso.Resolucion, new { @for = "Resolucion", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Curso.Resolucion, new { @id = "Resolucion", @class = "form-control" })
                        </div>

                        @Html.LabelFor(model => model.Curso.NombreCurso, new { @for = "Curso", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Curso.NombreCurso, new { @id = "Curso", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                            @*@Html.LabelFor(model => model.EstadoSeleccionado, new { @for = "Estado", @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.EstadoSeleccionado,
                                Model.Estados as SelectList,
                                null, new { @id = "Estado", @class = "form-control" })
                            </div>*@

                            @Html.LabelFor(model => model.Curso.TipoCurso, new { @for = "TipoCurso", @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.Curso.TipoCurso, new { @id = "TipoCurso", @class = "form-control" })
                            </div>
                        </div>

                    @*<div class="form-group row">
                            <div class="col-sm-3 col-form-label">
                                @Html.LabelFor(model => model.NivelCaucion.Nivel, new { @for = "Nivel" })
                                <i class="fa fa-info-circle" data-toggle="tooltip" data-placement="bottom" title="Digite el cargo asociado al nivel de las pólizas de caución que desea buscar."></i>
                            </div>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.NivelCaucion.Descripcion, new { @id = "Nivel", @class = "form-control" })
                            </div>
                        </div>*@

                    <input id="btnBuscar" name="SubmitButton" type="submit" value="Buscar" class="btn btn-primary float-right" />
                    <div id="preloader" class="loader float-right" style="display: none"></div>

                </div>
            </div>

        </center>
    </div>
    <br />
}

<div id="dvResultadoBusqueda"></div>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/SearchHistoricoCursos.js" type="text/javascript"></script>

<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("body").tooltip({ selector: '[data-toggle=tooltip]' });
    });
</script>

