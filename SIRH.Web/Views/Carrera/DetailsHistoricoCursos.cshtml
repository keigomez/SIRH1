@model SIRH.Web.ViewModels.BusquedaHistoricoCursosVM

@{
    ViewBag.Title = "Detalle Histórico Cursos";
    Layout = "~/Views/Shared/Carrera.cshtml";
}

<blockquote><h3>Detalle de Histórico de Cursos</h3></blockquote>

<div class="card">
    <h5 class="card-header">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
        </svg>
        <b>Detalle</b>
    </h5>
    <div class="card-body">
        @using (Html.BeginForm("ReporteDetalleHistoricoCursos", "Carrera", FormMethod.Post, new { @id = "thisForm" }))
        {
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span>
                        <b>Nombre: </b>@Model.Curso.Nombre
                        @Html.HiddenFor(model => model.Curso.Nombre)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Cédula: </b>@Model.Curso.Cedula
                        @Html.HiddenFor(model => model.Curso.Cedula)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Nombre del curso: </b>@Model.Curso.NombreCurso
                        @Html.HiddenFor(model => model.Curso.NombreCurso)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Total de horas: </b>@Model.Curso.TotalHoras
                        @Html.HiddenFor(model => model.Curso.TotalHoras)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Tipo de curso: </b>@Model.Curso.TipoCurso
                        @Html.HiddenFor(model => model.Curso.TipoCurso)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Impartido en: </b>@Model.Curso.ImpartidoEn
                        @Html.HiddenFor(model => model.Curso.ImpartidoEn)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Fecha rige: </b>@if (Model.Curso.FecRige.Year > 1)
                        {@Model.Curso.FecRige.ToShortDateString();
                    }
                        @Html.HiddenFor(model => model.Curso.FecRige)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Fecha Final: </b>@if (Model.Curso.FecFinal.Year > 1)
                        {@Model.Curso.FecFinal.ToShortDateString();
                    }
                        @Html.HiddenFor(model => model.Curso.FecFinal)
                    </span>
                </li>
                <li class="list-group-item">
                    <span>
                        <b>Resolución: </b>@Model.Curso.Resolucion
                        @Html.HiddenFor(model => model.Curso.Resolucion)
                    </span>
                </li>

            </ul>
            <br />
            <button class="btn btn-danger" type="submit"><i class="fa fa-file-pdf-o"></i> Exportar a PDF</button>
        }
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>