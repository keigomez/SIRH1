@model SIRH.Web.ViewModels.GenerarResolucionVM

@{
    ViewBag.Title = "CreateResolucion";
    Layout = "~/Views/Shared/Carrera.cshtml";
}


<link rel="stylesheet" href="~/Content/datetimepicker.css">


<div class="jumbotron">

    @using (Ajax.BeginForm("CreateResolucion", "Carrera", new AjaxOptions
    {
        UpdateTargetId = "divListaCursos",
        HttpMethod = "POST",
        OnComplete = "CompleteBuscar",
        OnBegin = "BeginBuscar"
    }))
    {
        <center>
            <h3 class="display-4">Generar resolución</h3>

            <br />

            <div class="card">
                <h5 class="card-header">Datos de resolución</h5>
                <div class="card-body">

                    <div class="form-group row">
                        @Html.LabelFor(model => model.NumResolucion, new { @for = "NumResolucion", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.NumResolucion, new { @id = "NumResolucion", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NumResolucion)
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.FechaRige, new { @for = "FechaRige", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.FechaRige, new { @id = "FechaRige", @class = "form-control", @readonly = "readonly", @onchange = "OnChangeFechaRige()" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.FechaVence, new { @for = "FechaVence", @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-5">
                            @Html.TextBoxFor(model => model.FechaVence, new { @id = "FechaVence", @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                </div>
            </div>

            <br />

            <div class="card">
                <div class="card-header text-left">
                    <strong>Buscar cursos de funcionario</strong>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.FuncionarioBusqueda.Cedula, new { @class = "form-control", @placeholder = "Cédula", style = "width: 280px;" })
                        @Html.ValidationMessageFor(model => model.FuncionarioBusqueda.Cedula)
                        @Html.HiddenFor(model => model.ListaCursos)
                        @Html.HiddenFor(model => model.CursosSeleccionados)
                    </div>
                    <input id="btnBuscar" name="SubmitButton" class="btn btn-primary" type="submit" value="Buscar" />
                    <div id="preloader" class="loader" style="display: none"></div>

                </div>
            </div>
            
        </center>
    }

        <div id="divListaCursos"></div>

    </div>





<br />




@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/Pages/GenerarResolucion.js"></script>
<script src="~/Scripts/Pages/GenerarResolucionFormulario.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>




