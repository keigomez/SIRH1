@model SIRH.Web.ViewModels.BusquedaExperienciaVM

@{
    ViewBag.Title = "SearchExperiencia";
    Layout = "~/Views/Shared/Carrera.cshtml";
}

@using (Ajax.BeginForm("SearchExperiencia", "Carrera", new AjaxOptions
{
    UpdateTargetId = "divExperienciaFuncionario",
    HttpMethod = "POST",
    OnComplete = "CompleteSearch",
    OnBegin = "BeginSearch"
}))
{
    <div class="jumbotron">
        <center>
            <h3 class="display-4">Buscar experiencia</h3>

            <div class="card">
                <div class="card-header text-left">
                    <strong>Buscar Funcionario</strong>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Cedula, new { @class = "form-control", @placeholder = "Cédula", style = "width: 280px;" })
                        @Html.ValidationMessageFor(model => model.Cedula)
                    </div>
                    <input id="btnBuscar" name="SubmitButton" class="btn btn-primary" type="submit" value="Buscar" />
                    <div id="preloader" class="loader" style="display: none"></div>

                </div>
            </div>


        </center>
    </div>



}

<br />

<div id="divExperienciaFuncionario"></div>


@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/SearchExperiencia.js" type="text/javascript"></script>


