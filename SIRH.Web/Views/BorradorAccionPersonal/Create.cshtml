@model SIRH.Web.ViewModels.FormularioBorradorAccionPersonalVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/BorradorAccionPersonal.cshtml";
}
<link href="~/Content/datetimepicker.css" rel="stylesheet" />
<center><h2>Borrador de Acción de Personal</h2></center>
@{
    Html.EnableClientValidation();
    using (Ajax.BeginForm("Create", "BorradorAccionPersonal", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnSuccess = "SuccessCargarFuncionario",
        OnComplete = "CompleteCargarFuncionario",
        OnBegin = "BeginCargarFuncionario",
        OnFailure = "CompleteCargarFuncionario"
    }))
    {
        <div class="card">
            <h5 class="card-header">Buscar Funcionario</h5>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-4">
                        @Html.LabelFor(model => model.Funcionario.Cedula)
                        <span>:</span>
                        @Html.TextBoxFor(model => model.Funcionario.Cedula, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Funcionario.Cedula)
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <input id="btnBuscar" class="btn btn-secondary" name="SubmitButton" type="submit" value="Buscar" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <div id="progressbar" class="loader" hidden></div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        @Html.HiddenFor(model => model.Borrador.IdEntidad)
                        @Html.HiddenFor(model => model.DetallePuesto)
                    </div>
                </div>

            </div>
        </div>


    }
    <div id="dvResultadoBusqueda">
        @{
            //Html.RenderPartial("_FormularioBorradorAccionPersonal", Model);
        }
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioBorradorAccionPersonal.js" type="text/javascript"></script>