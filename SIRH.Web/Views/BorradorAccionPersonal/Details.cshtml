@model SIRH.Web.ViewModels.FormularioBorradorAccionPersonalVM
@{
    ViewBag.Title = "Detalle de Borrador";
    Layout = "~/Views/Shared/BorradorAccionPersonal.cshtml";
}

<center><h2>Detalle de Borrador</h2></center>
@{
    if (Request.QueryString["accion"] == "solicitud")
    {
        if (Model.Error == null)
        {
            <div class="card">
                <h5 class="card-header">Detalles</h5>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        La solicitud se ha guardado correctamente.
                    </div>
                    <div>Se ha almacenado la Solicitud # <b>@Html.AttributeEncode(Model.Borrador.IdEntidad)</b> con el Número de Oficio: </div>
                    <br /><div><b>@Html.AttributeEncode(Model.Borrador.NumOficio)</b></div>
                    <p>
                        <div class="link_return">
                            @Html.ActionLink("Regresar", "Index",null,new { @class="btn btn-outline-primary" })
                        </div>
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <h5 class="card-header">Detalles</h5>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        Ocurrió un error al momento de guardar la Solicitud.
                    </div>
                    <div>La Solicitud no pudo ser guardada debido al siguiente error: </div>
                    <br /><div><b>@Html.AttributeEncode(Model.Error.MensajeError)</b></div>
                    <br /><div>Si conoce la causa de este error, por favor revise los datos que intentó almacenar e intentelo de nuevo.</div>
                    <br /><div>De lo contrario le invitamos a ponerse en contacto con nuestro equipo de soporte, mediante el sistema de <a href="http://sisrh.mopt.go.cr:83/" target="_blank">Ayuda y Soporte</a></div>

                    <p>
                        <div class="link_return">
                            <a class="btn bnt-outline-primary" href="javascript:history.back()" id="A6">Regresar</a>
                        </div>
                    </p>

                </div>
           </div>

        }
    }
    else
    {
        if (Request.QueryString["accion"] == "guardar")
        {
            if (Model.Error == null)
            {
                <div class="card">
                    <h5 class="card-header">Detalles</h5>
                    <div class="card-body">
                        <div class="alert alert-success" role="alert">
                            La solicitud se ha guardado correctamente.
                        </div>
                        <div>Se ha almacenado el Borrador # <b>@Html.Encode(Model.Borrador.IdEntidad)</b> para el funcionario: </div>
                        <br /><div><b>@Html.AttributeEncode(Model.Funcionario.Cedula) -  @Html.Encode(Model.Funcionario.Nombre) @Html.Encode(Model.Funcionario.PrimerApellido) @Html.Encode(Model.Funcionario.SegundoApellido)</b></div>
                        <br /><div>Correspondiente al periodo: <b>@Html.AttributeEncode(Model.Detalle.FecRige.ToShortDateString()) - @Html.Encode(Model.Detalle.FecVence.ToShortDateString())</b> </div>
                        <p>
                            @Html.ActionLink("Regresar", "Buscar",null,new { @class="btn btn-outline-primary" })
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <h5 class="card-header">Detalles</h5>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            Ocurrió un error al momento de guardar el Borrador.
                        </div>
                        <div>El Borrador no pudo ser guardado debido al siguiente error: </div>
                        <br /><div><b>@Html.AttributeEncode(Model.Error.MensajeError)</b></div>
                        <br /><div>Si conoce la causa de este error, por favor revise los datos que intentó almacenar e intentelo de nuevo.</div>
                        <br /><div>De lo contrario le invitamos a ponerse en contacto con nuestro equipo de soporte, mediante el sistema de <a href="http://sisrh.mopt.go.cr:83/" target="_blank">Ayuda y Soporte</a></div>

                        <p>
                            <div class="link_return">
                                <a class="btn bnt-outline-primary" href="javascript:history.back()" id="A6">Regresar</a>
                            </div>
                        </p>

                    </div>
                </div>
            }
        }
        else
        {
            if (Request.QueryString["accion"] == "modificar")
            {
                if (Model.Error == null)
                {
                    <div class="card">
                        <h5 class="card-header">Detalles</h5>
                        <div class="card-body">
                            <div class="alert alert-success" role="alert">
                                El Borrador se ha modificado.
                            </div>
                            <div>Se ha modificado el Borrador # <b>@Html.AttributeEncode(Model.Borrador.IdEntidad)
                            @if (Model.Detalle != null)
                            { 
                                @:</b> para el funcionario: </div>
                                @:<br /><div><b>@Html.AttributeEncode(Model.Funcionario.Cedula) - @Html.AttributeEncode(Model.Funcionario.Nombre) @Html.AttributeEncode(Model.Funcionario.PrimerApellido) @Html.AttributeEncode(Model.Funcionario.SegundoApellido)</b>
                            }     
                            </div>
                            <div class="link_return">                          
                                @Html.ActionLink("Listado Borradores", "Search", "BorradorAccionPersonal")
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card">
                        <h5 class="card-header">Detalles</h5>
                        <div class="card-body">
                            <div class="alert alert-danger" role="alert">
                                Ocurrió un error al momento de guardar el Borrador.
                            </div>
                            <div>El Borrador no pudo ser modificado debido al siguiente error: </div>
                            <br /><div><b>@Html.AttributeEncode(Model.Error.MensajeError)</b></div>
                            <br /><div>Si conoce la causa de este error, por favor revise los datos que intentó almacenar e intentelo de nuevo.</div>
                            <br /><div>De lo contrario le invitamos a ponerse en contacto con nuestro equipo de soporte, mediante el sistema de <a href="http://sisrh.mopt.go.cr:83/" target="_blank">Ayuda y Soporte</a></div>

                            <p>
                                <div class="link_return">
                                    <a class="btn bnt-outline-primary" href="javascript:history.back()" id="A4">Regresar</a>
                                </div>
                            </p>

                        </div>
                    </div>
                }
            }
            else{
                if (Request.QueryString["accion"] == "cancel")
                {
                    if (Model.Error == null)
                    {
                        <div class="card">
                        <h5 class="card-header">Detalles</h5>
                        <div class="card-body">
                            <div class="alert alert-success" role="alert">
                                El Borrador se ha modificado.
                            </div>
                            <div>Se ha anulado el Borrador # <b>@Html.Encode(Model.Borrador.IdEntidad)
                            @if (Model.Detalle != null)
                            { 
                                @:</b> para el funcionario: </div>
                                @:<br /><div><b>@Html.AttributeEncode(Model.Funcionario.Cedula) - @Html.AttributeEncode(Model.Funcionario.Nombre) @Html.AttributeEncode(Model.Funcionario.PrimerApellido) @Html.AttributeEncode(Model.Funcionario.SegundoApellido)</b>
                                @:<br /><div>Correspondiente al periodo: <b>@Html.AttributeEncode(Model.Detalle.FecRige.ToShortDateString()) - @Html.AttributeEncode(Model.Detalle.FecVence.ToShortDateString())</b> </div>
                            }     
                            </div>
                            <div class="link_return">
                                @Html.ActionLink("Regresar", "Search", null, new { @class="btn btn-outline-primary" })
                            </div>
                        </div>
                    </div>
                    }
                    else
                    {
                        <div class="card">
                            <h5 class="card-header">Detalles</h5>
                            <div class="card-body">
                                <div class="alert alert-danger" role="alert">
                                    Ocurrió un error al momento de guardar el Borrador.
                                </div>
                                <div>El Borrador no pudo ser anulado debido al siguiente error: </div>
                                <br /><div><b>@Html.AttributeEncode(Model.Error.MensajeError)</b></div>
                                <br /><div>Si conoce la causa de este error, por favor revise los datos que intentó almacenar e intentelo de nuevo.</div>
                                <br /><div>De lo contrario le invitamos a ponerse en contacto con nuestro equipo de soporte, mediante el sistema de <a href="http://sisrh.mopt.go.cr:83/" target="_blank">Ayuda y Soporte</a></div>

                                <p>
                                    <div class="link_return">
                                        <a class="btn bnt-outline-primary" href="javascript:history.back()" id="A4">Regresar</a>
                                    </div>
                                </p>

                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <h5 class="card-header">Borrador # @Model.Borrador.IdEntidad</h5>
                        @Html.HiddenFor(model => model.Borrador.IdEntidad)
                        <div class="card-body">
                            @using (Html.BeginForm("ReporteDetalleBorrador", "BorradorAccionPersonal", FormMethod.Post, new { @id = "thisForm" }))
                            {
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <td><b>@Html.Label("Funcionario")</b></td>
                                            <td>
                                                @Model.Funcionario.Cedula - @Model.Funcionario.Nombre @Model.Funcionario.PrimerApellido @Model.Funcionario.SegundoApellido
                                                @Html.HiddenFor(model => model.Funcionario.Cedula)
                                                @Html.HiddenFor(model => model.Funcionario.Nombre)
                                                @Html.HiddenFor(model => model.Funcionario.PrimerApellido)
                                                @Html.HiddenFor(model => model.Funcionario.SegundoApellido)
                                                @Html.HiddenFor(model => model.Puesto.CodPuesto)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.Programa.IdEntidad)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.Programa.DesPrograma)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Seccion.IdEntidad)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)


                                                @Html.HiddenFor(model => model.DetallePuesto.Clase.IdEntidad)
                                                @Html.HiddenFor(model => model.DetallePuesto.Clase.DesClase)
                                                @Html.HiddenFor(model => model.DetallePuesto.EscalaSalarial.CategoriaEscala)
                                                @Html.HiddenFor(model => model.DetallePuesto.EscalaSalarial.SalarioBase)
                                                @Html.HiddenFor(model => model.DetallePuesto.EscalaSalarial.MontoAumentoAnual)
                                                @Html.HiddenFor(model => model.DetallePuesto.EscalaSalarial.Periodo.MontoPuntoCarrera)
                                                @Html.HiddenFor(model => model.DetallePuesto.PorProhibicion)

                                                @Html.HiddenFor(model => model.Clase.DesClase)
                                                @Html.HiddenFor(model => model.Contrato.NumeroAnualidades)
                                                @Html.HiddenFor(model => model.PuntosCarrera)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Borrador.UsuarioAsignado)</b>
                                            </td>
                                            <td>
                                                @Model.Asignado.Nombre @Model.Asignado.PrimerApellido @Model.Asignado.SegundoApellido
                                                @Html.HiddenFor(model => model.Borrador.UsuarioAsignado)
                                                @Html.HiddenFor(model => model.Borrador.NumOficio)
                                                @Html.HiddenFor(model => model.Asignado.Nombre)
                                                @Html.HiddenFor(model => model.Asignado.PrimerApellido)
                                                @Html.HiddenFor(model => model.Asignado.SegundoApellido)
                                                @Html.HiddenFor(model => model.Detalle.Programa.IdEntidad)
                                                @Html.HiddenFor(model => model.Detalle.Programa.DesPrograma)
                                                @Html.HiddenFor(model => model.Detalle.Seccion.IdEntidad)
                                                @Html.HiddenFor(model => model.Detalle.Seccion.NomSeccion)
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.FecRige)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.FecRige.ToShortDateString()
                                                @Html.HiddenFor(model => model.Detalle.FecRige)
                                            </td>

                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.FecVence)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.FecVence.ToShortDateString()
                                                @Html.HiddenFor(model => model.Detalle.FecVence)
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.FecRigeIntegra)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.FecRigeIntegra.ToShortDateString()
                                                @Html.HiddenFor(model => model.Detalle.FecRigeIntegra)
                                            </td>

                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.FecVenceIntegra)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.FecVenceIntegra.ToShortDateString()
                                                @Html.HiddenFor(model => model.Detalle.FecVenceIntegra)
                                            </td>
                                        </tr>

                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.TipoAccion.DesTipoAccion)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.TipoAccion.DesTipoAccion
                                                @Html.HiddenFor(model => model.Detalle.TipoAccion.IdEntidad)
                                                @Html.HiddenFor(model => model.Detalle.TipoAccion.DesTipoAccion)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Borrador.EstadoBorrador.DesEstadoBorrador)</b>
                                            </td>
                                            <td>
                                                @Model.Borrador.EstadoBorrador.DesEstadoBorrador
                                                @Html.HiddenFor(model => model.Borrador.EstadoBorrador.IdEntidad)
                                                @Html.HiddenFor(model => model.Borrador.EstadoBorrador.DesEstadoBorrador)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.CodPuesto)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.CodPuesto
                                                @Html.HiddenFor(model => model.Detalle.CodPuesto)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.CodClase)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.CodClase
                                                @Html.HiddenFor(model => model.Detalle.CodClase)
                                            </td>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.Categoria)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.Categoria
                                                @Html.HiddenFor(model => model.Detalle.Categoria)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.Disfrutado)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.Disfrutado
                                                @Html.HiddenFor(model => model.Detalle.Disfrutado)
                                            </td>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.Autorizado)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.Autorizado
                                                @Html.ValidationMessageFor(model => model.Detalle.Autorizado)
                                                @Html.HiddenFor(model => model.Detalle.Autorizado)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoSalarioBase)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.MtoSalarioBase)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoSalarioBase)
                                                @Html.HiddenFor(model => model.Detalle.MtoSalarioBase)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoAumentosAnuales)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.MtoAumentosAnuales)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoAumentosAnuales)
                                                @Html.HiddenFor(model => model.Detalle.MtoAumentosAnuales)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoRecargo)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.MtoRecargo)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoRecargo)
                                                @Html.HiddenFor(model => model.Detalle.MtoRecargo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoGradoGrupo)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.NumGradoGrupo * Model.DetallePuesto.EscalaSalarial.Periodo.MontoPuntoCarrera)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoGradoGrupo)
                                                @Html.HiddenFor(model => model.Detalle.MtoGradoGrupo)
                                            </td>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.NumGradoGrupo)</b>
                                            </td>
                                            <td>
                                                @Model.Detalle.NumGradoGrupo
                                                @Html.ValidationMessageFor(model => model.Detalle.NumGradoGrupo)
                                                @Html.HiddenFor(model => model.Detalle.NumGradoGrupo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoProhibicion)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.MtoSalarioBase * Model.Detalle.PorProhibicion / 100)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoProhibicion)
                                                @Html.HiddenFor(model => model.Detalle.MtoProhibicion)
                                            </td>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.PorProhibicion)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:p}", Model.Detalle.PorProhibicion / 100)
                                                @Html.ValidationMessageFor(model => model.Detalle.PorProhibicion)
                                                @Html.HiddenFor(model => model.Detalle.PorProhibicion)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Detalle.MtoOtros)</b>
                                            </td>
                                            <td>
                                                @String.Format("{0:c}", Model.Detalle.MtoOtros)
                                                @Html.ValidationMessageFor(model => model.Detalle.MtoOtros)
                                                @Html.HiddenFor(model => model.Detalle.MtoOtros)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <b>
                                                    @Html.Label("TOTAL")
                                                </b>
                                            </td>
                                            <td>
                                                <b>
                                                    @String.Format("{0:c}", Model.Detalle.MtoSalarioBase + Model.Detalle.MtoAumentosAnuales + Model.Detalle.MtoRecargo + (Model.Detalle.MtoSalarioBase * Model.Detalle.PorProhibicion / 100) + (Model.Detalle.NumGradoGrupo * Model.DetallePuesto.EscalaSalarial.Periodo.MontoPuntoCarrera) + Model.Detalle.MtoOtros)
                                                </b>
                                            </td>
                                        </tr>


                                    </tbody>
                                </table>
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b>@Html.LabelFor(model => model.Borrador.ObsJustificacion)</b>
                                            </td>
                                            <td></td>
                                            <td>
                                                @Model.Borrador.ObsJustificacion
                                                @Html.HiddenFor(model => model.Borrador.ObsJustificacion)
                                            </td>
                                        </tr>
                                        <tr></tr>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <div class="link_pdf">
                                                    <a class="btn btn-outline-primary" href="#" id="submit_link">Exportar a PDF</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            }
                            @if (Model.Borrador.IdEntidad == 0)
                            {
                                <div class="link_edit">@Html.ActionLink("Editar", "Edit", new { @codigo = Model.Borrador.IdEntidad },new { @class="btn btn-outline-primary" })</div>
                            }
                            <div class="link_return">
                                <a class="btn btn-outline-primary" href="javascript:history.back()" id="A5">Regresar</a>
                            </div>

                        </div>
                    </div>
                }
            }
        }
    }
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script type="text/javascript">
        $(function() {
            $('a#submit_link').click(function() {
                $('form#thisForm').submit();
            });
        });
</script>