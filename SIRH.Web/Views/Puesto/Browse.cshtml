@model SIRH.Web.ViewModels.PerfilFuncionarioVM
@{
    ViewBag.Title = "Puestos: Búsqueda";
    Layout = "~/Views/Shared/Vacantes.cshtml";
}

<!--link href="~/Content/datetimepicker.css" rel="stylesheet" /-->
<script src="~/Content/bootstrap-datepicker/js/jquery-3.4.1.slim.min.js"></script>
<link id="bsdp-css" href="~/Content/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet">


@using (Ajax.BeginForm("Browse", "Puesto", new AjaxOptions
{
    UpdateTargetId = "target",
    HttpMethod = "POST",
    OnSuccess = "successData", //"Success",
    OnBegin = "beginData", //"Begin"
}))

{
    <div class="jumbotron">
        <center>
            <h3 class="display-4">Control de movimientos de puestos</h3>
            <br />
            <div class="card">
                <div class="card-header text-left">
                    <strong>Parámetros de búsqueda</strong>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        @Html.Label("Cédula de funcionario", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBox("cedula", String.Empty, new { @onkeypress = "return IsNumeric(event,'', 'cedula')", @class = "form-control" })
                        </div>
                        @Html.Label("Código de Puesto", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-3">
                            @Html.TextBox("codpuesto", String.Empty, new { @onkeypress = "return IsNumeric(event,'', 'código de puesto')", @class = "form-control" })
                        </div>
                    </div>
                    <input id="btnBusca" name="SubmitButton" type="submit" value="Buscar" class="btn btn-primary float-right" />
                    <div id="progressbar" class="loader float-right" hidden></div>
                </div>
            </div>
        </center>
    </div>
}

<div id="error" class="alert alert-danger" role="alert" hidden></div>

<div id="target"></div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/FormularioVacantes.js" type="text/javascript"></script>
<script src="~/Scripts/funciones-generales.js" type="text/javascript"></script>
<script src="~/Scripts/funciones-dialogos.js" type="text/javascript"></script>
