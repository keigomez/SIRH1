@model SIRH.Web.ViewModels.PerfilUsuarioVM
@{
    ViewBag.Title = "Listar Permisos";
    Layout = "~/Views/Shared/PerfilUsuario.cshtml";
}

<center><h2>Lista de Permisos por usuario</h2></center>
<div class="jumbotron">
    <div class="card">
        <div class="card-header">
            Datos 
        </div>
        <div class="card-body">
            @using (Ajax.BeginForm("List", "PerfilUsuario", new AjaxOptions
            {
                UpdateTargetId = "resultadoUser",
                HttpMethod = "POST",
                OnSuccess = "OnSuccess",
                OnBegin = "OnBegin"
            }))
            {
                <div class="row">
                    <div class="form-group col-4">
                        @Html.LabelFor(model => model.Usuario.NombreUsuario)
                        <span>:</span>
                        @Html.TextBoxFor(model => model.Usuario.NombreUsuario, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <button type="submit" class="btn btn-secondary" id="btnRegistrar" style="margin-top:10px;">Buscar</button>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-4">
                        <div id="preloader" class="loader" hidden></div>
                    </div>
                </div>
            }
            <div id="resultadoUser"></div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/PerfilUsuario.js" type="text/javascript"></script>