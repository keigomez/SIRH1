@model SIRH.Web.ViewModels.PerfilUsuarioVM
@{
    ViewBag.Title = "Deshabilitar";
    Layout = "~/Views/Shared/PerfilUsuario.cshtml";
}

<center><h2>Deshabilitar Usuario</h2></center>
<div class="jumbotron">
    <center>
        <div class="card text-center w-75">
            <div class="card-header">
                Datos
            </div>

            <div class="card-body">
                @using (Ajax.BeginForm("Deshabilitar", "PerfilUsuario", new AjaxOptions
                {
                    UpdateTargetId = "resultadoUser",
                    HttpMethod = "POST",
                    OnSuccess = "OnSuccess",
                    OnBegin = "OnBegin"
                }))
                {

                    <div class="row">
                        <div class="form-group col-4"></div>
                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.Usuario.NombreUsuario)
                            <span>:</span>
                            @Html.TextBoxFor(model => model.Usuario.NombreUsuario, new { @class = "form-control" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-4"></div>
                        <div class="form-group col-4">
                            @Html.LabelFor(model => model.Observacion)
                            <span>:</span>
                            @Html.TextAreaFor(model => model.Observacion, new { @class = "form-control" })
                            <button type="submit" class="btn btn-secondary" id="btnRegistrar" style="margin-top:10px;">Deshabilitar</button>

                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-4">
                        </div>
                    </div>
                    <div class="row">

                    </div>
                    <div class="row">
                        <div class="form-group col-4">
                            <div id="preloader" class="loader" hidden></div>
                        </div>
                    </div>
                }
                <div id="resultadoUser"></div>

            </div>

            <div class="card-footer text-muted">
                Deshabilitar Usuario
            </div>
        </div>
    </center>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/PerfilUsuario.js" type="text/javascript"></script>