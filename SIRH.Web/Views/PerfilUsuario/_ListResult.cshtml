@model SIRH.Web.ViewModels.PerfilUsuarioVM

<div class="card text-center">
    <div class="card-header">
        Resultados
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        Funcionario
                    </th>
                    <th>
                        Cédula
                    </th>
                    <th>
                        Correo electrónico
                    </th>
                    <th>
                        Teléfono
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Funcionario.Nombre @Model.Funcionario.PrimerApellido @Model.Funcionario.SegundoApellido 
                    </td>
                    <td>
                        @Model.Funcionario.Cedula
                    </td>
                    <td>
                        @Model.Usuario.EmailOficial
                    </td>
                    <td>
                        @Model.Usuario.TelefonoOficial
                    </td>
                </tr>
                <tr class="thead-light">
                   <th>
                       Permiso
                   </th>
                    <th colspan="3">
                        Descripción
                    </th>
                </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    @for (int i = 0; i < Model.Permisos.Count(); i++)
                    {
                        if (i == 0)
                        {
                            <a class="list-group-item list-group-item-action active" id="list-@Model.Permisos.ElementAt(i).IdEntidad-list" data-toggle="list" href="#list-@Model.Permisos.ElementAt(i).IdEntidad" role="tab" aria-controls="@Model.Permisos.ElementAt(i).IdEntidad">
                                @Model.Permisos.ElementAt(i).Perfil - @Model.Permisos.ElementAt(i).NomPermiso
                            </a>
                        }
                        else
                        {
                            <a class="list-group-item list-group-item-action" id="list-@Model.Permisos.ElementAt(i).IdEntidad-list" data-toggle="list" href="#list-@Model.Permisos.ElementAt(i).IdEntidad" role="tab" aria-controls="@Model.Permisos.ElementAt(i).IdEntidad">
                                @Model.Permisos.ElementAt(i).Perfil - @Model.Permisos.ElementAt(i).NomPermiso
                            </a>
                        }


                    }
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    @for (int i = 0; i < Model.Permisos.Count(); i++)
                    {
                        if (i == 0)
                        {

                            <div class="tab-pane fade show active" id="list-@Model.Permisos.ElementAt(i).IdEntidad" role="tabpanel" aria-labelledby="list-@Model.Permisos.ElementAt(i).IdEntidad-list">
                                @Model.Permisos.ElementAt(i).DesPermiso
                            </div>

                        }
                        else
                        {
                           
                            <div class="tab-pane fade" id="list-@Model.Permisos.ElementAt(i).IdEntidad" role="tabpanel" aria-labelledby="list-@Model.Permisos.ElementAt(i).IdEntidad-list">
                                @Model.Permisos.ElementAt(i).DesPermiso
                            </div>
                            
                        }

                    }
                </div>

            </div>
        </div>
    </div>
    <div class="card-footer text-muted">
        Permisos
    </div>
</div>
