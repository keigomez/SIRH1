@model SIRH.Web.ViewModels.RebajoColectivoVM
@{
    ViewBag.Title = "RebajoColectivo";
    Layout = "~/Views/Shared/Vacaciones.cshtml";
}

<link href="~/Content/datetimepicker.css" rel="stylesheet" />


<center><h2>Rebajo colectivo</h2></center>

@{
    using (Ajax.BeginForm("RebajoColectivo", "Vacaciones", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnComplete = "CompleteInfo",
        OnBegin = "BeginCargarInfo"
    }))
    {
        <div class="card">
            <div class="card-body">

                <div class="row" style="margin-bottom:5px;">


                    <div class="form-group col-4">
                        @Html.LabelFor(model => model.Registro.Dias)
                        <span>:</span>
                        @Html.TextBoxFor(model => model.Registro.Dias, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Registro.Dias)
                    </div>

                    <div class="form-group col-5">
                        @Html.LabelFor(model => model.Registro.NumeroTransaccion)
                        <span>:</span>
                        @Html.TextBoxFor(model => model.Registro.NumeroTransaccion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Registro.NumeroTransaccion)
                    </div>
                </div>

                <div class="row" style="margin-bottom:0px;">

                    <div class="form-group col-4">
                        @Html.Label("Fecha de inicio")
                        <span>:</span>
                        <div class="end_date input-group mb-4">
                            @Html.TextBoxFor(model => model.Registro.FechaRige, new { @id = "FechaInicioVacaciones", @class = "form-control start_date", @readonly = "readonly", @placeholder = "Fecha de Inicio" })
                            @Html.ValidationMessageFor(model => model.Registro.FechaRige)
                        </div>
                    </div>

                    <div class="form-group col-5">
                        @Html.Label("Fecha final")
                        <span>:</span>
                        <div class="end_date input-group mb-4">
                            @Html.TextBoxFor(model => model.Registro.FechaVence, new { @id = "FechaFinalVacaciones", @class = "form-control start_date", @readonly = "readonly", @placeholder = "Fecha de Finalización" })
                            @Html.ValidationMessageFor(model => model.Registro.FechaVence)
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:20px;">
                    <div class="form-group col-4">
                        @Html.Label("Funcionarios a excluir:")
                        <div class="form-check">
                            @Html.CheckBoxFor(model => model.seleccionSeguridad)
                            @Html.LabelFor(model => model.funcionariosSeguridad)
                        </div>
                        <div class="form-check">
                            @Html.CheckBoxFor(model => model.seleccionPolicial)
                            @Html.LabelFor(model => model.funcionariosPoliciales)


                        </div>
                    </div>
                </div>



                <button id="btnBuscar" type="submit" class="btn btn-primary " name="SubmitButton" value="Buscar">
                    <i class="fa fa-calendar-check-o"></i>
                    Procesar
                </button>
                <div class="progress" style="height: 25px;" id="barClass">
                    <div class="progress-bar bg-info" id="bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><label style="color:black" id="label">0%</label></div>
                </div>
            </div>
        </div>

    }
    <div id="dvResultadoBusqueda"></div>
}





@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/RebajoColectivo.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>

