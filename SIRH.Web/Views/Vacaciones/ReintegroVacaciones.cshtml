@model SIRH.Web.ViewModels.ReintegroVacacionesVM
@{
    ViewBag.Title = "ReintegroVacaciones";
    Layout = "~/Views/Shared/Vacaciones.cshtml";
}
@*<link href="~/Content/datetimepicker.css" rel="stylesheet" />*@
<script src="~/Content/bootstrap-datepicker/js/jquery-3.4.1.slim.min.js"></script>
<!--link id="bs-css" href="https://netdna.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet"-->
<link id="bsdp-css" href="~/Content/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet">


<center><h2>Reintegro de vacaciones</h2></center>

@{
    Html.EnableClientValidation();
    using (Html.BeginForm(Ajax.BeginForm("ReintegroVacaciones", "Vacaciones", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnSuccess = "SuccessCargarReintegro",
        OnComplete = "CompleteCargarReintegro",
        OnBegin = "BeginCargarReintegro"
    })))
    {
        <div class="card">
            <h5 class="card-header"></h5>
            <div class="card-body">
                <center>
                    <div class="row">

                        <form class="form-inline">
                            <div class="col-2">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.RegistroVacaciones.NumeroTransaccion)
                                </div>

                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.RegistroVacaciones.NumeroTransaccion, new { @class = "form-control", style = "margin-bottom:10px;"})

                                    @Html.ValidationMessageFor(model => model.RegistroVacaciones.NumeroTransaccion)
                                </div>

                            </div>
                            <div class="col-2">

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PeriodoVacaciones.Nombramiento.Funcionario.Cedula)
                                </div>


                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.PeriodoVacaciones.Nombramiento.Funcionario.Cedula, new { @class = "form-control", style = "margin-bottom:10px;", @maxlength = "10" })

                                    @Html.ValidationMessageFor(model => model.PeriodoVacaciones.Nombramiento.Funcionario.Cedula)
                                </div>

                            </div>
                            <div class="col-2">
                                <button class="btn btn-primary " id="btnBuscar" name="SubmitButton" type="submit" value="Buscar">
                                    <i class="fa fa-search"></i>
                                    Buscar
                                </button>
                            </div>
                        </form>


                    </div>

                    <div class="row">

                        <div class="col-10">
                            <center>
                                <div id="preloader" class="loader" hidden></div>
                            </center>
                        </div>


                    </div>
                </center>
            </div>
        </div>
    }
    <div id="dvResultadoBusqueda"></div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/ReintegroVacaciones.js" type="text/javascript"></script>
@*<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>*@

<script src="~/Content/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
