@model SIRH.Web.ViewModels.FormularioPagoFeriadoVM

@{
    if (Model != null)
    {
        using (Ajax.BeginForm("Create", new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "detalleResultado",
            OnComplete = "CompleteGuardarPago",
            OnBegin = "BeginGuardarPago"
        }))
        {
            @Html.ValidationSummary(true)

            <div id="formulario">
                <div id="pagina1">
                    <div class="card">
                        <div class="card-header">
                            <strong>Información del Funcionario</strong>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3 col-md-4">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Funcionario.Cedula): </strong>@Html.DisplayFor(model => model.Funcionario.Cedula)
                                                @Html.HiddenFor(model => model.Funcionario.Cedula)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.DetallePuesto.Clase.DesClase): </strong>@Html.DisplayFor(model => model.DetallePuesto.Clase.DesClase)
                                                @Html.HiddenFor(model => model.DetallePuesto.Clase.DesClase)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision): </strong>@Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion): </strong>@Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-sm-3 col-md-4">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Funcionario.Nombre): </strong>@Model.Funcionario.Nombre @Model.Funcionario.PrimerApellido @Model.Funcionario.SegundoApellido
                                                @Html.HiddenFor(model => model.Funcionario.Nombre)
                                                @Html.HiddenFor(model => model.Funcionario.PrimerApellido)
                                                @Html.HiddenFor(model => model.Funcionario.SegundoApellido)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.DetallePuesto.Especialidad.DesEspecialidad): </strong>@Html.DisplayFor(model => model.DetallePuesto.Especialidad.DesEspecialidad)
                                                @Html.HiddenFor(model => model.DetallePuesto.Especialidad.DesEspecialidad)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion): </strong>@Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto): </strong>@Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto)
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-sm-3 col-md-4">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.CodPuesto): </strong>@Html.DisplayFor(model => model.Puesto.CodPuesto)
                                                @Html.HiddenFor(model => model.Puesto.CodPuesto)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal): </strong>@Html.DisplayFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal)
                                                @Html.HiddenFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento): </strong>@Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento)
                                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento)
                                            </span>
                                        </li>
                                        <li class="list-group-item">
                                            <span>
                                                <strong>@Html.LabelFor(model => model.DetalleContratacion.CodigoPolicial): </strong>@Html.DisplayFor(model => model.DetalleContratacion.CodigoPolicial)
                                                @Html.HiddenFor(model => model.DetalleContratacion.CodigoPolicial)
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            <strong>Selección de días</strong>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Tipo de trámite :</h5>
                            <div class="d-inline-flex">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="tipo" value="Sistema" id="SistemaT" class="custom-control-input" onclick="radio_sistema()" checked>
                                    <label class="custom-control-label" for="SistemaT" style="padding-right: 10px;">Sistema</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="tipo" value="Físico" id="FisicoT" class="custom-control-input" onclick="radio_fisico()">
                                    <label class="custom-control-label" for="FisicoT">Físico</label>
                                </div>
                            </div>
                            <br />
                            <div class="form-group row" id="nombramientoSL" style="display: none;">
                                <br />
                                <div class="col-3">
                                    @Html.DropDownListFor(model => model.NombramientoSeleccionado, Model.TipoNombramiento as SelectList, "Tipo de nombramiento", new { @class = "form-control" })
                                </div>
                            </div>
                            <br />
                            <h5 class="card-title">Tipo de día: </h5>
                            <div class="d-inline-flex">
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="tipoTramite" value="Días feriados" id="radioFeriado" class="custom-control-input" onclick="radio_feriado()" checked>
                                    <label class="custom-control-label" for="radioFeriado" style="padding-right: 10px;">Días feriados</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" name="tipoTramite" value="Días de asueto" id="radioAsueto" class="custom-control-input" onclick="radio_asueto()">
                                    <label class="custom-control-label" for="radioAsueto">Días de asueto</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">
                            Días a pagar
                        </div>
                        <div class="card-body">
                            <table class="table" id="dias_pagados">
                                <thead>
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Horas Lab.</th>
                                        <th scope="col">S. Mensual</th>
                                        <th scope="col">S. Hora</th>
                                        <th scope="col">Pagar</th>
                                        <th scope="col">Año día</th>
                                        <th scope="col">Eliminar</th>
                                    </tr>
                                </thead>
                                <tbody id="table_body_dias_pagar"></tbody>
                            </table>
                            <hr class="my-4">
                            <center>
                                @Html.LabelFor(model => model.porcentajeSalarioEscolar)
                                (@Html.DisplayFor(model => model.SalEscolar.PorcentajeRemuneracion)%)
                                @Html.TextBoxFor(model => model.porcentajeSalarioEscolar, new { @readonly = "readonly", Style = "border:0" })
                                @*@Html.DisplayFor(model => model.porcentajeSalarioEscolar)*@
                            </center>
                            <center>
                                @Html.LabelFor(model => model.SubtotalDias)
                                @Html.TextBoxFor(model => model.SubtotalDias, new { @readonly = "readonly", Style = "border:0" })
                            </center>
                        </div>
                    </div>
                    <br />
                    <center>
                        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modal_feriados" id="btn_feriado"><i class="fa fa-plus"></i> Agregar días feriados</button>
                        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modal_asueto" id="btn_asueto" style="display: none"><i class="fa fa-plus"></i> Agregar días de asueto</button>
                    </center>
                    <br />

                    <div class="form-group justify-content-md-center">
                        @Html.LabelFor(model => model.Observaciones, new { @for = "Observaciones" })
                        @Html.TextAreaFor(model => model.Observaciones, new { @id = "Observaciones", @class = "form-control", @rows = 5 })
                    </div>

                    <br />
                    <button type="button" class="btn btn-primary float-right" id="btn_siguiente" onclick="siguiente()">Siguiente <i class="fa fa-arrow-right"></i></button>
                </div>

                <div id="pagina2" style="display: none">
                    <div class="card">
                        <h5 class="card-header">Cálculos</h5>
                        <div class="card-body">

                            <nav class="nav nav-pills flex-column flex-sm-row">
                                <a class="flex-sm-fill text-sm-center nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Diferencias de periodos</a>
                                <a class="flex-sm-fill text-sm-center nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Deducciones obrero</a>
                                <a class="flex-sm-fill text-sm-center nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Deducciones patronales</a>
                            </nav>
                            <br />
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <table id="diferenciasPeriodos" class="table">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th colspan="2" scope="col">Cálculo diferencias de varios periodos</th>
                                            </tr>
                                        </thead>
                                        <tr>
                                            <td>
                                                @Html.LabelFor(model => model.DiferenciaPeriodo)
                                            </td>
                                            <td>
                                                ₡@Html.DisplayFor(model => model.DiferenciaPeriodo)
                                                @Html.HiddenFor(model => model.DiferenciaPeriodo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.LabelFor(model => model.SalarioEscolar)
                                                @Html.HiddenFor(model => model.SalarioEscolar)
                                            </td>
                                            <td>
                                                ₡@Html.DisplayFor(model => model.DiferenciaPeriodo)
                                                @Html.HiddenFor(model => model.DiferenciaPeriodo)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                @Html.LabelFor(model => model.SubtotalDiferencias)
                                            </td>
                                            <td>
                                                ₡@Html.DisplayFor(model => model.DiferenciaPeriodo)
                                                @Html.HiddenFor(model => model.DiferenciaPeriodo)
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    <table id="deduccionObrero" class="table">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th colspan="3" scope="col">Deducciones de ley a aplicar (Obrero)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var deduccion in Model.DeduccionesObrero)
                                            {
                                                <tr>
                                                    <td>
                                                        @deduccion.DescripcionDeduccion
                                                    </td>
                                                    <td>
                                                        @deduccion.PorcentajeDeduccion%
                                                    </td>
                                                    <td>
                                                        <input name="deduccion_obreroTabla" style='border: 0;' value="₡0.00" readonly />
                                                    </td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="2">
                                                    Total de deducciones Obrero
                                                </td>
                                                <td>
                                                    <input name="Total_deduccion_obreroTabla" style='border: 0;' value="₡0.00" readonly />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                    <table id="deduccionPatronal" class="table">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th colspan="3" scope="col">Deducciones de ley a aplicar (Patronal)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var deduccion in Model.DeduccionesPatronal)
                                            {
                                                <tr>
                                                    <td>
                                                        @deduccion.DescripcionDeduccion
                                                    </td>
                                                    <td>
                                                        @deduccion.PorcentajeDeduccion
                                                        %
                                                    </td>
                                                    <td>
                                                        <input name="deduccion_patronalTabla" style='border: 0;' value="₡0.00" readonly />
                                                    </td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="2">
                                                    Total de deducciones Patronal
                                                </td>
                                                <td>
                                                    <input name="total_deduccion_patronalTabla" style='border: 0;' value="₡0.00" readonly />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>

                    <br /><br />

                    <div class="card">
                        <h5 class="card-header">Monto total a pagar</h5>
                        <div class="card-body">
                            <div class="container">
                                <table id="tabla_montos_totales" class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th colspan="2" scope="col">Total a pagar al servidor</th>
                                        </tr>
                                    </thead>
                                    <tr>
                                        <td>
                                            @Html.LabelFor(model => model.DiferenciaLiquida)
                                        </td>
                                        <td>
                                            ₡@Html.DisplayFor(model => model.DiferenciaLiquida)
                                            @Html.HiddenFor(model => model.DiferenciaLiquida)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @Html.LabelFor(model => model.AguinaldoProporcional)
                                        </td>
                                        <td>
                                            ₡@Html.DisplayFor(model => model.AguinaldoProporcional)
                                            @Html.HiddenFor(model => model.AguinaldoProporcional)
                                        </td>
                                    </tr>
                                    <tr style="background-color: #DDDDDD;">
                                        <td>
                                            @Html.LabelFor(model => model.MontoTotal)
                                        </td>
                                        <td>
                                            ₡0.00
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>
                    @Html.HiddenFor(model => model.TipoTramite)
                    @Html.HiddenFor(model => model.DesgloseSalarial.MontoSalarioBruto, new { id = "montoSalario" })
                    @Html.HiddenFor(model => model.SalEscolar.PorcentajeRemuneracion, new { id = "porEscolar" })
                    <br />
                    <center>
                        <input id="btnAlmacenar" name="SubmitButton" class="btn btn-dark" type="submit" value="Almacenar trámite" />
                        <div id="preloaderAlmacenar" class="loader" style="display: none"></div>
                    </center>
                    <br />
                    <div id="detalleResultado"></div>
                    <br />
                    <button type="button" class="btn btn-primary float-left" id="btn_atras" onclick="atras()"><i class="fa fa-arrow-left"></i> Atras</button>
                </div>
            </div>
        }
    }
}




<div class="modal fade" id="modal_feriados" tabindex="-1" role="dialog" aria-labelledby="modalFeriadoLabel" aria-hidden="true">
    @Html.Partial("DiaFeriado_Index")
</div>


<div class="modal fade" id="modal_asueto" tabindex="-1" role="dialog" aria-labelledby="modalAsuetolLabel" aria-hidden="true">
    @Html.Partial("Asueto_Index")
</div>

<script>
    $("#modal_feriados").appendTo("body");
    $("#modal_asueto").appendTo("body");
</script>

