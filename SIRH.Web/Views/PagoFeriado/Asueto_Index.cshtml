@model SIRH.Web.ViewModels.FormularioPagoFeriadoVM

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="modalAsuetolLabel">Catálogo de días de asueto:</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="card">
                <div class="card-header">
                    <strong>Parámetros de búsqueda</strong>
                </div>
                <div class="card-body">
                    @using (Ajax.BeginForm("Asueto_Index", "PagoFeriado", new AjaxOptions { UpdateTargetId = "target-asueto", HttpMethod = "POST", OnBegin = "BeginAsueto", OnSuccess = "SuccessAsueto" }))
                    {
                        <div class="form-group row">
                            <label for="NombreSearch" class="col-sm-3 col-form-label">Descripción</label>
                            <div class="col-sm-9">
                                @Html.TextBoxFor(model => model.NombreSearch, new { @id = "NombreSearch", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.CantonSeleccionado, new { @for = "CantonSeleccionado", @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(model => model.CantonSeleccionado,
                                Model.Canton as SelectList,
                                null, new { @id = "CantonSeleccionado", @class = "form-control" })
                            </div>
                        </div>

                    <input id="btnBuscarDiasAsueto" name="SubmitButton" type="submit" value="Buscar" class="btn btn-primary float-right"/>
                    <div id="preloaderDiasAsueto" class="loader float-right" style="display: none"></div>
                    }                   
                </div>
            </div>
            <br />
            <div id="target-asueto"></div>
        </div>
    </div>
</div>


