
@model SIRH.Web.ViewModels.BusquedaExpedienteVM
@{
    ViewBag.Title = "CreateBusquedaExpediente";
    Layout = "~/Views/Shared/Archivo.cshtml";
}
<link href="~/Content/datetimepicker.css" rel="stylesheet" />
<center><h2>Traslado de Expediente a Archivo Central</h2></center>
@using (Ajax.BeginForm("CreateTrasladoArchivoCentral", "Archivo", new AjaxOptions
{
    UpdateTargetId = "UpdateTrasladoArchivoCentral",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    OnSuccess = "SuccesTrasladoArchivoCentral",
    OnComplete = "CompleteTrasladoArchivoCentral",
    OnBegin = "BeginTrasladoArchivoCentral"
}))
{
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Expediente.DatoABuscar)
                        @Html.TextBoxFor(model => model.Expediente.DatoABuscar , new { @class = "form-control", @placeholder = "Número de Expediente", @style ="width: 56%;" })
                        @Html.HiddenFor(model => model.Expediente.DatoABuscar)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input id="btnBuscar" name="SubmitButton" type="submit" value="Buscar" class="btn btn-success" />
                    <div id="preloaderBuscar" class="loader float-left"></div>
                </div>
            </div>
        </div>
    </div>
}

<div id="UpdateTrasladoArchivoCentral"></div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/CreateTrasladoArchivoCentral.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>
