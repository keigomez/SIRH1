
@{
    ViewBag.Title = "Inicio: marcas de asistencia";
    Layout = "~/Views/Shared/MarcasAsistencia.cshtml";
}


<center>
    <h2>Módulo control de marcas de asistencia</h2>
    <h3>Bienvenido(a), @Session["Nombre_Completo"]</h3>
</center>
<div class="jumbotron">
    <center>
        <p class="textoprincipal">
            Para iniciar, seleccione alguna de las opciones del menú a su izquierda.
            <br />En este módulo, usted puede:
        </p>
        <div class="row justify-content-center">


            @{

                if (Convert.ToBoolean(Session["Administrador_Global"])
                || Convert.ToBoolean(Session["Administrador_Marcas"]))
                {

                    <div class="col-md-2">
                        <img alt="" src="../../Content/Images/new.png" /><br /><p>Registrar funcionarios</p>
                    </div>
                        
                    <div class="col-md-2">
                        <img alt="" src="../../Content/Images/look.png" /><br /><p>Consultar funcionarios</p>
                    </div>
                    <div class="col-md-2">
                        <img alt="" src="../../Content/Images/pdf_download.png" /><br /><p>Generar reportes de marcaciones</p>
                    </div>


                }
                else
                {
                    if (Convert.ToBoolean(Session["Permiso_Marcas_Operativo"]))
                    {
                        <div class="col-md-2">
                            <img alt="" src="../../Content/Images/new.png" /><br /><p>Registrar funcionarios</p>
                        </div>

                        <div class="col-md-2">
                            <img alt="" src="../../Content/Images/look.png" /><br /><p>Consultar funcionarios</p>
                        </div>
                        <div class="col-md-2">
                            <img alt="" src="../../Content/Images/pdf_download.png" /><br /><p>Generar reportes de marcaciones</p>
                        </div>
                    }
                    else
                    {

                        <div class="col-md-2">
                            <img alt="" src="../../Content/Images/look.png" /><br /><p>Consultar funcionarios</p>
                        </div>
                        <div class="col-md-2">
                            <img alt="" src="../../Content/Images/pdf_download.png" /><br /><p>Generar reportes de marcaciones</p>
                        </div>
                    }
                }


            }
        </div>



    </center>

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")

<script src="~/Scripts/sidebar.js" type="text/javascript"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
