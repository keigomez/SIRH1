@model SIRH.Web.ViewModels.FormularioMarcasAsistenciaVM


@{ 
    if(Model != null)
    {
        using (Ajax.BeginForm("Create", new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "detalleResultado",
            OnBegin = "BeginGuardar",
            OnComplete = "CompleteGuardar",
            OnSuccess = "SuccessGuardar",
            OnFailure = "SuccessGuardar"
        }))
        {
            Html.ValidationSummary(true);
            <div id="formulario">
                <table id="detalle_funcionario" class="table" style="margin-top:15px; margin-bottom:25px;">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="6">
                                Información del Funcionario
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Funcionario.Cedula)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Funcionario.Cedula)
                                @Html.HiddenFor(model => model.Funcionario.Cedula)
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Funcionario.Nombre)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Model.Funcionario.Nombre @Model.Funcionario.PrimerApellido @Model.Funcionario.SegundoApellido
                                @Html.HiddenFor(model => model.Funcionario.Nombre)
                                @Html.HiddenFor(model => model.Funcionario.PrimerApellido)
                                @Html.HiddenFor(model => model.Funcionario.SegundoApellido)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.CodPuesto)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.CodPuesto)
                                @Html.HiddenFor(model => model.Puesto.CodPuesto)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.DetallePuesto.Clase.DesClase)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.DetallePuesto.Clase.DesClase)
                                @Html.HiddenFor(model => model.DetallePuesto.Clase.DesClase)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.DetallePuesto.Especialidad.DesEspecialidad)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.DetallePuesto.Especialidad.DesEspecialidad)
                                @Html.HiddenFor(model => model.DetallePuesto.Especialidad.DesEspecialidad)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal)
                                @Html.HiddenFor(model => model.DetallePuesto.OcupacionReal.DesOcupacionReal)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision)
                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Division.NomDivision)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion)
                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.DireccionGeneral.NomDireccion)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento)
                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Departamento.NomDepartamento)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)
                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Seccion.NomSeccion)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto)
                                </b>
                            </td>
                            <td class="columna_info">
                                @Html.DisplayFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto)
                                @Html.HiddenFor(model => model.Puesto.UbicacionAdministrativa.Presupuesto.CodigoPresupuesto)
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.JornadaLaboral.DescripcionJornada)
                                </b>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.JornadaLaboral.DescripcionJornada)
                                @Html.HiddenFor(model => model.JornadaLaboral.DescripcionJornada)
                            </td>
                        </tr>
                    </tbody>
                </table>
                
                <table id="detalle_funcionario" class="table" style="margin-bottom:25px;">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="6">
                                Asignación de dispositivos
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                    
                </table>
                
                <table id="dispositivos" class="table" style="margin-bottom:25px;">
                    <thead class="thead-light">
                        <tr>
                            <th colspan="2">
                                Dispositivos
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Dispositivo.Descripcion)
                                </b>
                            </td>
                            <td>
                                <b>
                                    @Html.LabelFor(model => model.Dispositivo.Ubicacion)
                                </b>
                            </td>
                        </tr>
                    </tbody>
                    
                </table>


                <div class="row">
                    <div class="form-group col-3">
                        <button type="button" id="btnPopup" class="btn btn-info" style="margin-bottom:25px;">
                            Agregar dispositivos
                        </button>
                    </div>
                    <div class="form-group col-3">
                        <input id="btnGuardar" name="SubmitButton" type="submit" value="Registrar funcionario"
                               class="btn btn-secondary" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-5"></div>
                    <center>
                        <div id="preloader1" class="loader" hidden></div>
                    </center>
                </div>
               
                

                <div class="alert alert-warning" role="alert" id="dialogConf" style="display: none">
                    ¡El dispositivo seleccionado ya fue agregado previamente!
                </div>

                <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">Dispositivos</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @{Html.RenderPartial("_Dispositivos_Dialog", Model); }
                            </div>
                            <div class="modal-footer">
                                <button id="CacelarCalculoPopUp" type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                @*<button id="CalcularPopUp" type="button" class="btn btn-primary">Calcular</button>*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }
            <div id="detalleResultado"></div>

            @*<div class="alert alert-warning" role="alert">
                @Html.ValidationSummary("El formulario contiene los siguientes errores:")
            </div>*@
           
    }

}

