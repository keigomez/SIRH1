@model SIRH.Web.ViewModels.FormularioMarcasAsistenciaVM
@{
    ViewBag.Title = "Registrar funcionario";
    Layout = "~/Views/Shared/MarcasAsistencia.cshtml";
}

<h2>Registrar funcionario</h2>
@{ 
    Html.EnableClientValidation();
    using (Ajax.BeginForm("Create", "MarcasAsistencia", new AjaxOptions
    {
        UpdateTargetId = "dvResultadoBusqueda",
        HttpMethod = "POST",
        OnSuccess = "SuccessCargarFuncionario",
        OnComplete = "CompleteCargarFuncionario",
        OnBegin = "BeginCargarFuncionario"
    }))
    {
        <div  class="jumbotron">
            <center>
                <div class="card" id="detalle">
                    <div class="card-header">
                        Buscar Funcionario
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2"></div>
                            <div class="form-group col-2">
                                @Html.LabelFor(model => model.Funcionario.Cedula)
                                <span>:</span>
                            </div>
                            <div class="form-group col-3">
                                @Html.TextBoxFor(model => model.Funcionario.Cedula, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Funcionario.Cedula)
                            </div>
                            <div class="form-group col-3">
                                <input class="btn btn-secondary " id="btnBuscar" name="SubmitButton" type="submit" value="Buscar"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-11">
                                <center>
                                    <div id="preloader" class="loader" hidden></div>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </center>
        </div>
    }

    <div id="dvResultadoBusqueda">
        
    </div>
}



@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/CreateMarcasAsistencia.js" type="text/javascript"></script>

