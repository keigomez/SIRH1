@model SIRH.Web.ViewModels.ManualCargosVM

@{
    ViewBag.Title = "Evidencias";
    Layout = "~/Views/Shared/ManualCargos.cshtml";
}

@using (Ajax.BeginForm("Search", "MontoCaucion", new AjaxOptions
{
    UpdateTargetId = "dvResultadoBusqueda",
    HttpMethod = "POST",
    OnComplete = "CompleteSearch",
    OnBegin = "BeginSearch"
}))
{
    <div class="jumbotron">
        <center>
            <h1>Evidencias</h1>
            <br />
            <div class="card" title="Competencia 1">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.Comportamiento, new { @for = "Supervision", @class = "col-form-label" })
                        </div>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(model => model.Comportamiento,
                            Model.TipoCompetencia as SelectList,
                            null, new { @id = "Supervision", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.Descripcion, new { @for = "Nombre", @class = "col-form-label" })
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Descripcion, new { @id = "Nombre", @class = "form-control" })
                        </div>
                    </div>
                    <div class="float-right">
                        <a href="@Url.Action("", "")" class="btn btn-outline-success">
                            <i class="fa fa-plus"></i> Agregar otra evidencia
                        </a>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="card" title="Competencia 2">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.Comportamiento, new { @for = "segundo", @class = "col-form-label" })
                        </div>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(model => model.Comportamiento,
                            Model.TipoCompetencia as SelectList,
                            null, new { @id = "segundo", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            @Html.LabelFor(model => model.Descripcion, new { @for = "segundonombre", @class = "col-form-label" })
                        </div>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Descripcion, new { @id = "segundonombre", @class = "form-control" })
                        </div>
                    </div>
                    <div class="float-right">
                        <a href="@Url.Action("", "")" class="btn btn-outline-success">
                            <i class="fa fa-plus"></i> Agregar otra evidencia
                        </a>
                    </div>
                </div>
            </div>
        </center>
        <br />
        <div class="float-right">
            <a href="@Url.Action("Evidencias", "ManualCargos")" class="btn btn-success">
                <i class="fa fa-floppy-o"></i> Guardar y continuar
            </a>
            <a href="@Url.Action("Evidencias", "ManualCargos")" class="btn btn-info">
                <i class="fa fa-floppy-o"></i> Finalizar y trasladar
            </a>
        </div>
    </div>
}

<div id="dvResultadoBusqueda"></div>
<br />

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/popper.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="~/Scripts/Pages/SearchMontoCaucion.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker.js" type="text/javascript"></script>
<script src="~/Scripts/datetimepicker-es.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("body").tooltip({ selector: '[data-toggle=tooltip]' });
    });
</script>

