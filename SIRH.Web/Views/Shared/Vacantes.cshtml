<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Integrado de Recursos Humanos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/sidebar.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <img class="embed-responsive" src="~/Content/Images/encabezado_vacantes.png" width="100%" />
        </div>
    </div>
    <div class="wrapper">
        <!-- Opciones del sidebar -->
        <nav id="sidebar">
            <ul class="list-unstyled components">
                <li>
                    @Html.ActionLink("Inicio", "Index", "Vacantes", null, new { @class = "colorlink" })
                </li>
                <li>
                    <a class="colorlink" href="#submenu1" data-toggle="collapse" data-target="#submenu1">Nombramientos</a>
                    <div class="collapse" id="submenu1" aria-expanded="false">
                        <ul class="list-unstyled components">
                            <li>@Html.ActionLink("Registrar nombramientos", "CreateNombramiento", "Nombramiento", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Consultar nombramientos", "SearchHistorialNombramiento", "Nombramiento", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Registrar oferentes", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Consultar oferentes", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Cartas de presentación", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a class="colorlink" href="#submenu2" data-toggle="collapse" data-target="#submenu2">Puestos</a>
                    <div class="collapse" id="submenu2" aria-expanded="false">
                        <ul class="list-unstyled components">
                            <li>@Html.ActionLink("Gestión de puestos", "EditPuesto", "Puesto", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Control de movimientos", "Browse", "Puesto", null, new { @class = "colorlink" })</li>
                            <li><a href="http://sisrh.mopt.go.cr:84/MovimientoPuesto/" class="colorlink">Seguimiento de puestos</a></li>
                            @*<li>@Html.ActionLink("Seguimiento de puestos", "Index", "Vacio", null, new { @class = "colorlink" })</li>*@
                            <li>@Html.ActionLink("Contenido presupuestario", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Estudios de puestos", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Préstamos de puestos", "Index", "Vacio", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Pedimentos de puestos", "SearchPedimento", "Vacantes", null, new { @class = "colorlink" })</li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a class="colorlink" href="#submenu3" data-toggle="collapse" data-target="#submenu3">Funcionarios</a>
                    <div class="collapse" id="submenu3" aria-expanded="false">
                        <ul class="list-unstyled components">
                            <li>@Html.ActionLink("Funcionarios nuevos / Reactivación", "RegistrarCandidato", "Funcionario", null, new { @class = "colorlink" })</li>
                            <li>@Html.ActionLink("Detalle contratación", "DetalleContratacionSearch", "Funcionario", null, new { @class = "colorlink" })</li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>
        @{
            System.Security.Principal.WindowsPrincipal principal = new System.Security.Principal.WindowsPrincipal(System.Security.Principal.WindowsIdentity.GetCurrent());
        }
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="colorlink" href="@Url.Action("Perfil", "PerfilUsuario", new { @username = principal.Identity.Name })">
                                    <i class="fa fa-user"></i> @principal.Identity.Name
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>
    <div class="container-fluid ">
        <div class="row">
            <img class="embed-responsive" src="~/Content/Images/pie-gris.png" width="100%" />
        </div>
    </div>



    <script src="~/Scripts/sidebar.js" type="text/javascript"></script>

</body>
</html>
